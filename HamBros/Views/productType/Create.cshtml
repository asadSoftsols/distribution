@{
    ViewBag.Title = "Product Category";
}
<script src="~/Scripts/angular.js"></script>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
        Product Category
        </h1>
        <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#"><i class="fa fa-dashboard"></i> Setup</a></li>
        <li><a href="#"><i class="fa fa-dashboard"></i> Product Category</a></li>
        <li class="active">Create</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content bs-form">
        <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Create</h3>
                <a href="/productType/Index" class="pull-right btn btn-success">Back to List</a>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form" id="form" onsubmit="return validate()">
                <div class="box-body">
                    
                <div class="form-group col-md-6">
                    <label for="productCategory">Category Type</label>
                    <span style="color:red">*</span>
                    <input type="text" class="form-control " id="productCategory" placeholder="Enter Product Category">
                </div>
                </div><!-- /.box-body --> 
                <div class="col-md-12">&nbsp;</div>   
                <div class="clearfix"></div>                
                <div class="box-footer">
                <label id="err" style="color:red"></label>
                <br />
                <button type="submit"  class="btn btn-primary">Submit</button>
                <button type="submit" id="cancelProType" class="btn btn-danger" onclick="">Cancel</button>
                </div>
            </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
        </div><!--/.row-->
        </section><!-- Main Content -->
    </div><!-- /.content-wrapper -->
       
